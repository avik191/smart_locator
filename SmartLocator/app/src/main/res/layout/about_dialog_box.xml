<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/transparent"
              android:orientation="vertical"
              android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_frame_normal"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="52dp"
            android:minWidth="64dp"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:text="About the App"
            android:textColor="#ffffff"/>



        <TextView
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:minHeight="52dp"
            android:minWidth="64dp"
            android:padding="8dp"
            android:shadowColor="@color/transparent"
            android:text="Ever stuck finding a specific photo?
                Creating Albums too complicated? \n
              \n  Road trip photos gone rogue?
               \n \n  We got it covered. \n

                \n Try iOrganizer. \n

              \n  A memory friendly app to keep all your photos iOrganized.
                Make memories. Don't Stress on creating Albums. We will do that for you.
               \n Happy Capturing. "
            android:textColor="#FFF"
            android:textSize="18sp" />





        <Button
            android:id="@+id/okBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="52dp"
            android:minWidth="64dp"
            android:padding="8dp"
            android:textSize="14dp"
            android:text="Done"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"/>
    </LinearLayout>


</LinearLayout>